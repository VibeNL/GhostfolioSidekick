@page "/task-status"
@using Microsoft.AspNetCore.Authorization
@using GhostfolioSidekick.Model.Tasks
@attribute [Authorize]

<PageTitle>Task Status</PageTitle>

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h1 class="d-flex align-items-center">
                <i class="bi bi-list-task me-2"></i>
                Task Status
            </h1>
            <p class="text-muted">Monitor the status and progress of background tasks</p>
        </div>
        <div class="col-auto">
            <div class="btn-group" role="group">
                <button class="btn btn-outline-success"
                        @onclick="RefreshTasksOnly"
                        disabled="@(_isLoading || _isRefreshing)"
                        title="Quick refresh - sync only task status data">
                    @if (_isRefreshing)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                    }
                    else
                    {
                        <i class="bi bi-lightning-charge me-2"></i>
                    }
                    Quick Refresh
                </button>
            </div>
        </div>
    </div>

    @* Refresh Status Progress Bar *@
    @if (_isRefreshing && !string.IsNullOrEmpty(_refreshStatus))
    {
        <div class="row mb-3">
            <div class="col">
                <div class="card border-info">
                    <div class="card-body">
                        <h6 class="card-title d-flex align-items-center">
                            <i class="bi bi-lightning-charge text-info me-2"></i>
                            <span>Refresh in Progress</span>
                        </h6>
                        <p class="card-text mb-2">@_refreshStatus</p>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar progress-bar-striped progress-bar-animated"
                                 role="progressbar"
                                 style="width: @(_refreshProgress)%"
                                 aria-valuenow="@_refreshProgress"
                                 aria-valuemin="0"
                                 aria-valuemax="100">
                            </div>
                        </div>
                        <small class="text-muted">@_refreshProgress% complete</small>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (_isLoading)
    {
        <div class="d-flex justify-content-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (_taskRuns?.Count > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-6 col-lg-3 mb-2">
                <div class="card border-primary">
                    <div class="card-body text-center">
                        <i class="bi bi-play-circle-fill text-primary fs-2"></i>
                        <h5 class="card-title mt-2">Running</h5>
                        <p class="card-text fs-4 fw-bold">@_runningTasks</p>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3 mb-2">
                <div class="card border-success">
                    <div class="card-body text-center">
                        <i class="bi bi-calendar-check-fill text-success fs-2"></i>
                        <h5 class="card-title mt-2">Scheduled</h5>
                        <p class="card-text fs-4 fw-bold">@_scheduledTasks</p>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3 mb-2">
                <div class="card border-danger">
                    <div class="card-body text-center">
                        <i class="bi bi-exclamation-triangle-fill text-danger fs-2"></i>
                        <h5 class="card-title mt-2">Errors</h5>
                        <p class="card-text fs-4 fw-bold">@_errorTasks</p>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3 mb-2">
                <div class="card border-info">
                    <div class="card-body text-center">
                        <i class="bi bi-list-ul text-info fs-2"></i>
                        <h5 class="card-title mt-2">Total</h5>
                        <p class="card-text fs-4 fw-bold">@_taskRuns.Count</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Task Details</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th class="cursor-pointer" @onclick="() => SortBy(nameof(TaskRun.InProgress))">
                                    Status
                                    @if (_sortColumn == nameof(TaskRun.InProgress))
                                    {
                                        <i class="bi @(_sortDirection == "asc" ? "bi-sort-up" : "bi-sort-down") ms-1"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-sort-alpha-down ms-1 text-muted"></i>
                                    }
                                </th>
                                <th class="cursor-pointer" @onclick="() => SortBy(nameof(TaskRun.Priority))">
                                    Priority
                                    @if (_sortColumn == nameof(TaskRun.Priority))
                                    {
                                        <i class="bi @(_sortDirection == "asc" ? "bi-sort-numeric-up" : "bi-sort-numeric-down") ms-1"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-sort-numeric-down ms-1 text-muted"></i>
                                    }
                                </th>
                                <th class="cursor-pointer" @onclick="() => SortBy(nameof(TaskRun.Name))">
                                    Task Name
                                    @if (_sortColumn == nameof(TaskRun.Name))
                                    {
                                        <i class="bi @(_sortDirection == "asc" ? "bi-sort-alpha-up" : "bi-sort-alpha-down") ms-1"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-sort-alpha-down ms-1 text-muted"></i>
                                    }
                                </th>
                                <th class="cursor-pointer" @onclick="() => SortBy(nameof(TaskRun.NextSchedule))">
                                    Next Scheduled
                                    @if (_sortColumn == nameof(TaskRun.NextSchedule))
                                    {
                                        <i class="bi @(_sortDirection == "asc" ? "bi-sort-up" : "bi-sort-down") ms-1"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-sort-alpha-down ms-1 text-muted"></i>
                                    }
                                </th>
                                <th>Last Updated</th>
                                <th>Error Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var task in GetSortedTasks())
                            {
                                <tr class="@GetRowClass(task)">
                                    <td>
                                        @if (task.InProgress)
                                        {
                                            <span class="badge bg-primary">
                                                <i class="bi bi-play-circle-fill me-1"></i>
                                                Running
                                            </span>
                                        }
                                        else if (!string.IsNullOrEmpty(task.LastException))
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-exclamation-triangle-fill me-1"></i>
                                                Error
                                            </span>
                                        }
                                        else if (task.Scheduled)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-calendar-check-fill me-1"></i>
                                                Scheduled
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-pause-circle-fill me-1"></i>
                                                Inactive
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@task.Priority</span>
                                    </td>
                                    <td class="fw-semibold">@task.Name</td>
                                    <td>
                                        @if (task.NextSchedule != DateTimeOffset.MaxValue)
                                        {
                                            <span class="@GetNextScheduleClass(task.NextSchedule)">
                                                @task.NextSchedule.ToString("dd/MM/yyyy HH:mm:ss")
                                                <small class="text-muted d-block">
                                                    @GetRelativeTime(task.NextSchedule)
                                                </small>
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not scheduled</span>
                                        }
                                    </td>
                                    <td>
                                        @if (task.LastUpdate != DateTimeOffset.MinValue)
                                        {
                                            <span>
                                                @task.LastUpdate.ToString("dd/MM/yyyy HH:mm:ss")
                                                <small class="text-muted d-block">
                                                    @GetRelativeTime(task.LastUpdate)
                                                </small>
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Never</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(task.LastException))
                                        {
                                            <button class="btn btn-sm btn-outline-danger"
                                                    @onclick="() => ShowErrorDetails(task)"
                                                    title="@task.LastException">
                                                <i class="bi bi-exclamation-triangle-fill me-1"></i>
                                                View Error
                                            </button>
                                        }
                                        else
                                        {
                                            <span class="text-success">
                                                <i class="bi bi-check-circle-fill me-1"></i>
                                                No errors
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else if (!_isLoading)
    {
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle me-2"></i>
            No task data available. Tasks may not be initialized yet.
        </div>
    }
</div>

<!-- Error Details Modal -->
@if (_selectedTaskError != null)
{
    <div class="modal fade show d-block" style="background-color: rgba(0,0,0,0.5);" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        Task Error Details
                    </h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CloseErrorDetails"></button>
                </div>
                <div class="modal-body">
                    <h6 class="fw-bold">Task Name:</h6>
                    <p class="mb-3">@_selectedTaskError.Name</p>

                    <h6 class="fw-bold">Error Message:</h6>
                    <div class="bg-light p-3 rounded border">
                        <pre class="mb-0" style="white-space: pre-wrap; word-wrap: break-word;">@_selectedTaskError.LastException</pre>
                    </div>

                    <div class="mt-3">
                        <small class="text-muted">
                            Last Updated: @_selectedTaskError.LastUpdate.ToString("dd/MM/yyyy HH:mm:ss")
                        </small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseErrorDetails">Close</button>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .cursor-pointer {
        cursor: pointer;
        user-select: none;
    }

        .cursor-pointer:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

    .row-running {
        background-color: rgba(13, 110, 253, 0.1);
    }

    .row-error {
        background-color: rgba(220, 53, 69, 0.1);
    }

    .row-overdue {
        background-color: rgba(255, 193, 7, 0.1);
    }

    .btn-outline-success:hover {
        background-color: #198754;
        border-color: #198754;
    }

    .btn-group .btn {
        position: relative;
    }
</style>