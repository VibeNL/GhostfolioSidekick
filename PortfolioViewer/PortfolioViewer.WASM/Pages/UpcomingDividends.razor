@page "/dividends"

<PageTitle>Upcoming Dividends</PageTitle>

<div class="container-fluid">
    @if (!isLoading && dividends != null && dividends.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-success shadow-sm">
                    <div class="card-header bg-success text-white">
                        <h4 class="card-title mb-0">
                            <i class="bi bi-bar-chart-fill me-2"></i>Monthly Dividend Overview
                        </h4>
                    </div>
                    <div class="card-body">
                        <PlotlyChart Data="chartData" Layout="chartLayout" Config="chartConfig" style="height: 40vh; width: 100%;" />
                    </div>
                </div>
            </div>
        </div>
    }
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-primary shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title mb-0">
                        <i class="bi bi-cash-coin me-2"></i>Upcoming Dividends
                    </h4>
                </div>
                <div class="card-body">
                    @if (isLoading)
                    {
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary mb-3" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <h5 class="text-muted">Loading Upcoming Dividends...</h5>
                        </div>
                    }
                    else if (dividends == null || !dividends.Any())
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-cash-coin text-muted" style="font-size: 4rem;"></i>
                            <h5 class="text-muted mt-3">No Upcoming Dividends</h5>
                            <p class="text-muted mb-0">There are no upcoming dividends at this time.</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Symbol</th>
                                        <th>Company</th>
                                        <th>Ex-Date</th>
                                        <th>Payment Date</th>
                                        <th class="text-end">Amount (Native)</th>
                                        <th class="text-end">Amount (Primary)</th>
                                        <th class="text-end">Quantity</th>
                                        <th class="text-end">Dividend/Share</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var div in dividends.OrderBy(d => d.PaymentDate))
                                    {
                                        <tr class="@(div.IsPredicted ? "table-secondary" : "")">
                                            <td>
                                                <strong>@div.Symbol</strong>
                                                @if (div.IsPredicted)
                                                {
                                                    <span class="badge bg-secondary ms-1" title="Estimated based on historical pattern">~</span>
                                                }
                                            </td>
                                            <td>@div.CompanyName</td>
                                            <td class="@(div.IsPredicted ? "text-muted fst-italic" : "")">@div.ExDate.ToString("yyyy-MM-dd")</td>
                                            <td>@div.PaymentDate.ToString("yyyy-MM-dd")</td>
                                            <td class="text-end">
                                                @div.Amount.ToString("F2") @div.Currency
                                            </td>
                                            <td class="text-end">
                                                @if (div.Currency != div.PrimaryCurrency)
                                                {
                                                    @div.AmountPrimaryCurrency.ToString("F2") @div.PrimaryCurrency
                                                }
                                                else
                                                {
                                                    <span class="text-muted">â€”</span>
                                                }
                                            </td>
                                            <td class="text-end">@div.Quantity.ToString("N2")</td>
                                            <td class="text-end">
                                                @div.DividendPerShare.ToString("F4") @div.Currency
                                                @if (div.Currency != div.PrimaryCurrency)
                                                {
                                                    <br><small class="text-muted">(@div.DividendPerSharePrimaryCurrency.ToString("F4") @div.PrimaryCurrency)</small>
                                                }
                                            </td>
                                            <td>
                                                @if (div.IsPredicted)
                                                {
                                                    <span class="badge bg-secondary">Predicted</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">Confirmed</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
