@page "/dividends"

<PageTitle>Upcoming Dividends</PageTitle>

<div class="container-fluid">
    @if (!isLoading && dividends != null && dividends.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-success shadow-sm">
                    <div class="card-header bg-success text-white">
                        <h4 class="card-title mb-0">
                            <i class="bi bi-bar-chart-fill me-2"></i>Monthly Dividend Overview
                        </h4>
                    </div>
                    <div class="card-body">
                        <PlotlyChart Data="chartData" Layout="chartLayout" Config="chartConfig" style="height: 40vh; width: 100%;" />
                    </div>
                </div>
            </div>
        </div>
    }
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-primary shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title mb-0">
                        <i class="bi bi-cash-coin me-2"></i>Upcoming Dividends
                    </h4>
                </div>
                <div class="card-body">
                    @if (isLoading)
                    {
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary mb-3" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <h5 class="text-muted">Loading Upcoming Dividends...</h5>
                        </div>
                    }
                    else if (dividends == null || !dividends.Any())
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-cash-coin text-muted" style="font-size: 4rem;"></i>
                            <h5 class="text-muted mt-3">No Upcoming Dividends</h5>
                            <p class="text-muted mb-0">There are no upcoming dividends at this time.</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Symbol</th>
                                        <th>Payment Date</th>
                                        <th class="text-end">Amount (Native)</th>
                                        <th>Status</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var div in dividends.OrderBy(d => d.PaymentDate))
                                    {
                                        <tr class="@(div.IsPredicted ? "table-secondary" : "")">
                                            <td>
                                                <strong>@div.Symbol</strong>
                                                @if (div.IsPredicted)
                                                {
                                                    <span class="badge bg-secondary ms-1" title="Estimated based on historical pattern">~</span>
                                                }
                                            </td>
                                            <td>@div.PaymentDate.ToString("yyyy-MM-dd")</td>
                                            <td class="text-end">
                                                @div.Amount.ToString("F2") @div.Currency
                                            </td>
                                            <td>
                                                @if (div.IsPredicted)
                                                {
                                                    <span class="badge bg-secondary">Predicted</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">Confirmed</span>
                                                }
                                            </td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-primary" @onclick="() => ShowDetails(div)">Details</button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@if (selectedDividend != null)
{
	<div class="modal fade show" style="display:block; background:rgba(0,0,0,0.5);" tabindex="-1" role="dialog">
		<div class="modal-dialog modal-dialog-centered" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title">Dividend Details - @selectedDividend.Symbol</h5>
					<button type="button" class="btn-close" aria-label="Close" @onclick="CloseDetails"></button>
				</div>
				<div class="modal-body">
					<dl class="row">
						<dt class="col-5">Company</dt>
						<dd class="col-7">@selectedDividend.CompanyName</dd>
						<dt class="col-5">Ex-Date</dt>
						<dd class="col-7">@selectedDividend.ExDate.ToString("yyyy-MM-dd")</dd>
						<dt class="col-5">Payment Date</dt>
						<dd class="col-7">@selectedDividend.PaymentDate.ToString("yyyy-MM-dd")</dd>
						<dt class="col-5">Amount (Native)</dt>
						<dd class="col-7">@selectedDividend.Amount.ToString("F2") @selectedDividend.Currency</dd>
						<dt class="col-5">Amount (Primary)</dt>
						<dd class="col-7">
							@if (selectedDividend.Currency != selectedDividend.PrimaryCurrency)
							{
								@selectedDividend.AmountPrimaryCurrency.ToString("F2") @selectedDividend.PrimaryCurrency
							}
							else
							{
								<span class="text-muted">â€”</span>
							}
						</dd>
						<dt class="col-5">Quantity</dt>
						<dd class="col-7">@selectedDividend.Quantity.ToString("N2")</dd>
						<dt class="col-5">Dividend/Share</dt>
						<dd class="col-7">
							@selectedDividend.DividendPerShare.ToString("F4") @selectedDividend.Currency
							@if (selectedDividend.Currency != selectedDividend.PrimaryCurrency)
							{
								<br /><small class="text-muted">(@selectedDividend.DividendPerSharePrimaryCurrency.ToString("F4") @selectedDividend.PrimaryCurrency)</small>
							}
						</dd>
						<dt class="col-5">Status</dt>
						<dd class="col-7">
							@if (selectedDividend.IsPredicted)
							{
								<span class="badge bg-secondary">Predicted</span>
							}
							else
							{
								<span class="badge bg-success">Confirmed</span>
							}
						</dd>
					</dl>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" @onclick="CloseDetails">Close</button>
				</div>
			</div>
		</div>
	</div>
	<div class="modal-backdrop fade show"></div>
}

@code {
	private dynamic? selectedDividend;

	private void ShowDetails(dynamic div)
	{
		selectedDividend = div;
	}

	private void CloseDetails()
	{
		selectedDividend = null;
	}
}
