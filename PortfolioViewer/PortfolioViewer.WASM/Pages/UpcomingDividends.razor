@page "/dividends"
@using GhostfolioSidekick.PortfolioViewer.WASM.Data.Models
@using Plotly.Blazor
@using Plotly.Blazor.Traces
@using System.Globalization
@inject GhostfolioSidekick.PortfolioViewer.WASM.Data.Services.IUpcomingDividendsService DividendsService
@inject GhostfolioSidekick.PortfolioViewer.WASM.Data.Services.IServerConfigurationService ServerConfigurationService

<PageTitle>Upcoming Dividends</PageTitle>

<div class="container-fluid">
    @if (!isLoading && dividends != null && dividends.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-success shadow-sm">
                    <div class="card-header bg-success text-white">
                        <h4 class="card-title mb-0">
                            <i class="bi bi-bar-chart-fill me-2"></i>Monthly Dividend Overview
                        </h4>
                    </div>
                    <div class="card-body">
                        <PlotlyChart Data="chartData" Layout="chartLayout" Config="chartConfig" style="height: 40vh; width: 100%;" />
                    </div>
                </div>
            </div>
        </div>
    }
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-primary shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title mb-0">
                        <i class="bi bi-cash-coin me-2"></i>Upcoming Dividends
                    </h4>
                </div>
                <div class="card-body">
                    @if (isLoading)
                    {
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary mb-3" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <h5 class="text-muted">Loading Upcoming Dividends...</h5>
                        </div>
                    }
                    else if (dividends == null || !dividends.Any())
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-cash-coin text-muted" style="font-size: 4rem;"></i>
                            <h5 class="text-muted mt-3">No Upcoming Dividends</h5>
                            <p class="text-muted mb-0">There are no upcoming dividends at this time.</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Symbol</th>
                                        <th>Company</th>
                                        <th>Ex-Date</th>
                                        <th>Payment Date</th>
                                        <th class="text-end">Amount (Native)</th>
                                        <th class="text-end">Amount (Primary)</th>
                                        <th class="text-end">Quantity</th>
                                        <th class="text-end">Dividend/Share</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var div in dividends.OrderBy(d => d.PaymentDate))
                                    {
                                        <tr>
                                            <td><strong>@div.Symbol</strong></td>
                                            <td>@div.CompanyName</td>
                                            <td>@div.ExDate.ToString("yyyy-MM-dd")</td>
                                            <td>@div.PaymentDate.ToString("yyyy-MM-dd")</td>
                                            <td class="text-end">
                                                @div.Amount.ToString("F2") @div.Currency
                                            </td>
                                            <td class="text-end">
                                                @if (div.Currency != div.PrimaryCurrency)
                                                {
                                                    @div.AmountPrimaryCurrency.ToString("F2") @div.PrimaryCurrency
                                                }
                                                else
                                                {
                                                    <span class="text-muted">â€”</span>
                                                }
                                            </td>
                                            <td class="text-end">@div.Quantity.ToString("N2")</td>
                                            <td class="text-end">
                                                @div.DividendPerShare.ToString("F4") @div.Currency
                                                @if (div.Currency != div.PrimaryCurrency)
                                                {
                                                    <br><small class="text-muted">(@div.DividendPerSharePrimaryCurrency.ToString("F4") @div.PrimaryCurrency)</small>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<UpcomingDividendModel>? dividends;
    private bool isLoading = true;

    private IList<ITrace> chartData = [];
    private Plotly.Blazor.Layout chartLayout = new();
    private Config chartConfig = new();

    protected override async Task OnInitializedAsync()
    {
        isLoading = true;
        dividends = await DividendsService.GetUpcomingDividendsAsync();
        BuildChart();
        isLoading = false;
    }

    private void BuildChart()
    {
        if (dividends == null || dividends.Count == 0)
            return;

        var months = dividends
            .Select(d => (d.PaymentDate.Year, d.PaymentDate.Month))
            .Distinct()
            .OrderBy(m => m.Year).ThenBy(m => m.Month)
            .ToList();

        var monthLabels = months
            .Select(m => new DateTime(m.Year, m.Month, 1).ToString("MMM yyyy", CultureInfo.InvariantCulture))
            .ToArray();

        var symbols = dividends.Select(d => d.Symbol).Distinct().OrderBy(s => s).ToList();
        var traces = new List<ITrace>();

        foreach (var symbol in symbols)
        {
            var y = months
                .Select(m => (object)dividends
                    .Where(d => d.Symbol == symbol && d.PaymentDate.Year == m.Year && d.PaymentDate.Month == m.Month)
                    .Sum(d => d.AmountPrimaryCurrency))
                .ToArray();

            traces.Add(new Bar
            {
                X = monthLabels,
                Y = y,
                Name = symbol
            });
        }

        chartData = traces;

        var currencySymbol = ServerConfigurationService.PrimaryCurrency.Symbol;
        chartLayout = new Plotly.Blazor.Layout
        {
            Title = new Plotly.Blazor.LayoutLib.Title { Text = "Expected Monthly Dividends" },
            XAxis = [new Plotly.Blazor.LayoutLib.XAxis { Title = new Plotly.Blazor.LayoutLib.XAxisLib.Title { Text = "Month" } }],
            YAxis = [new Plotly.Blazor.LayoutLib.YAxis { Title = new Plotly.Blazor.LayoutLib.YAxisLib.Title { Text = $"Amount ({currencySymbol})" } }],
            BarMode = Plotly.Blazor.LayoutLib.BarModeEnum.Stack,
            Margin = new Plotly.Blazor.LayoutLib.Margin { T = 40, L = 60, R = 30, B = 40 },
            AutoSize = true,
            ShowLegend = true,
            Legend =
            [
                new Plotly.Blazor.LayoutLib.Legend
                {
                    Orientation = Plotly.Blazor.LayoutLib.LegendLib.OrientationEnum.H,
                }
            ]
        };
        chartConfig = new Config { Responsive = true };
    }
}
