@using GhostfolioSidekick.PortfolioViewer.WASM.Components.Filters

<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
        <a class="navbar-brand" href="">PortfolioViewer</a>
        
        <button class="navbar-toggler" type="button" @onclick="ToggleNavMenu" aria-controls="navbarNav" aria-expanded="@(!collapseNavMenu)" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        
        <div class="@NavMenuCssClass navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All" @onclick="CollapseNavMenu">
                        <i class="bi bi-house-door-fill me-1"></i>Home
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="holdings" @onclick="CollapseNavMenu">
                        <i class="bi bi-pie-chart-fill me-1"></i>Holdings
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="accounts" @onclick="CollapseNavMenu">
                        <i class="bi bi-bank me-1"></i>Accounts
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="transactions" @onclick="CollapseNavMenu">
                        <i class="bi bi-receipt-cutoff me-1"></i>Transactions
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="portfolio-timeseries" @onclick="CollapseNavMenu">
                        <i class="bi bi-bar-chart-line me-1"></i>Time Series
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="tables" @onclick="CollapseNavMenu">
                        <i class="bi bi-table me-1"></i>Tables
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="data-issues" @onclick="CollapseNavMenu">
                        <i class="bi bi-exclamation-triangle-fill me-1"></i>Data Issues
                    </NavLink>
                </li>
            </ul>

            <!-- User Authentication Section -->
            <div class="navbar-nav ms-auto">
                <LoginDisplay />
            </div>

            <!-- Simplified Filters Section -->
            @if (ShowFilters)
            {
                <div class="navbar-filters ms-2">
                    <CommonFilters 
                        ShowDateFilters="ShowDateFilters"
                        ShowAccountFilter="ShowAccountFilter"
                        ShowSymbolFilter="ShowSymbolFilter" 
                        OnFiltersApplied="CollapseNavMenu" />
                </div>
            }
        </div>
    </div>
</nav>
