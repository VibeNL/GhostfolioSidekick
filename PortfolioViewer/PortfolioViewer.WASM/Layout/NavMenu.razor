@using GhostfolioSidekick.PortfolioViewer.WASM.Components.Filters

<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
        <a class="navbar-brand" href="">PortfolioViewer</a>
        
        <button class="navbar-toggler" type="button" @onclick="ToggleNavMenu" aria-controls="navbarNav" aria-expanded="@(!collapseNavMenu)" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        
        <div class="@NavMenuCssClass navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <i class="bi bi-house-door-fill me-1"></i>Home
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="holdings">
                        <i class="bi bi-pie-chart-fill me-1"></i>Holdings
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="portfolio-timeseries">
                        <i class="bi bi-bar-chart-line me-1"></i>Time Series
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="tables">
                        <i class="bi bi-table me-1"></i>Tables
                    </NavLink>
                </li>
            </ul>

            <!-- Filters Section -->
            @if (ShowFilters)
            {
                <div class="navbar-filters ms-auto">
                    <CommonFilters 
                        @bind-StartDate="StartDate"
                        @bind-EndDate="EndDate" 
                        @bind-SelectedCurrency="SelectedCurrency"
                        @bind-SelectedAccountId="SelectedAccountId"
                        ShowDateFilters="ShowDateFilters"
                        ShowCurrencyFilter="ShowCurrencyFilter"
                        ShowAccountFilter="ShowAccountFilter"
                        OnFiltersChanged="OnFiltersChanged" />
                </div>
            }
        </div>
    </div>
</nav>
