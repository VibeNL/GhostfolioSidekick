<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

	<PropertyGroup>
		<TargetFramework>net9.0</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<RuntimeIdentifier>browser-wasm</RuntimeIdentifier>
		<WasmBuildNative>true</WasmBuildNative>
		<ServiceWorkerAssetsManifest>service-worker-assets.js</ServiceWorkerAssetsManifest>
		<AssemblyName>GhostfolioSidekick.$(MSBuildProjectName)</AssemblyName>
		<RootNamespace>GhostfolioSidekick.$(MSBuildProjectName.Replace(" ", "_"))</RootNamespace>
		<UserSecretsId>0c5d0c9e-4b64-41be-8ab5-1d3d767e3f29</UserSecretsId>
	</PropertyGroup>

	<ItemGroup>
		<SonarQubeSetting Include="sonar.exclusions">
			<Value>**/*.js</Value>
		</SonarQubeSetting>
		<SonarQubeSetting Include="sonar.coverage.exclusions">
			<Value>**</Value>
		</SonarQubeSetting>
	</ItemGroup>

	<PropertyGroup>
		<NoWarn>1701;1702;SKEXP0110;SKEXP0001;CS8602</NoWarn>
	</PropertyGroup>

	<ItemGroup>
		<Content Remove="wwwroot\js\site.ts" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Bit.Besql" Version="9.12.0" />
		<PackageReference Include="Markdig" Version="0.43.0" />
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="9.0.10" />
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="9.0.10" PrivateAssets="all" />
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.Authentication" Version="9.0.10" />
		<PackageReference Include="Microsoft.Extensions.ServiceDiscovery" Version="9.5.1" />
		<PackageReference Include="Microsoft.TypeScript.MSBuild" Version="5.9.3">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
		<PackageReference Include="Plotly.Blazor" Version="6.0.2" />
		<PackageReference Include="System.Private.Uri" Version="4.3.2" />
		<PackageReference Include="Grpc.Net.Client.Web" Version="2.71.0" />
		<PackageReference Include="Grpc.Net.Client" Version="2.71.0" />
		<PackageReference Include="Google.Protobuf" Version="3.33.0" />
		<PackageReference Include="Grpc.Tools" Version="2.72.0" PrivateAssets="All" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\Database\Database.csproj" />
		<ProjectReference Include="..\..\Model\Model.csproj" />
		<ProjectReference Include="..\PortfolioViewer.Common\PortfolioViewer.Common.csproj" />
		<ProjectReference Include="..\PortfolioViewer.WASM.AI\PortfolioViewer.WASM.AI.csproj" />
		<ProjectReference Include="..\PortfolioViewer.WASM.Data\PortfolioViewer.WASM.Data.csproj" />
	</ItemGroup>

	<ItemGroup>
		<ServiceWorker Include="wwwroot\service-worker.js" PublishedContent="wwwroot\service-worker.published.js" />
	</ItemGroup>

	<ItemGroup>
		<Content Update="wwwroot\js\dist\webllm.interop.js">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
		<Content Update="wwwroot\js\dist\webllm.types.js">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
	</ItemGroup>

	<ItemGroup>
		<TypeScriptCompile Update="wwwroot\js\dist\webllm.interop.ts">
			<ExcludeFromSingleFile>true</ExcludeFromSingleFile>
			<CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
		</TypeScriptCompile>
		<TypeScriptCompile Update="wwwroot\js\dist\webllm.types.ts">
			<ExcludeFromSingleFile>true</ExcludeFromSingleFile>
			<CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
		</TypeScriptCompile>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.NET.ILLink.Tasks" Version="9.0.10" />
		<PackageReference Include="Microsoft.NET.Sdk.WebAssembly.Pack" Version="9.0.10" />
		<Protobuf Include="..\PortfolioViewer.ApiService\Protos\sync.proto" GrpcServices="Client" />
	</ItemGroup>

	<Target Name="AllowUsingAspNetCoreInBlazorWasm" AfterTargets="ProcessFrameworkReferences">
		<ItemGroup>
			<UnavailableRuntimePack Remove="Microsoft.AspNetCore.App" />
		</ItemGroup>
	</Target>

</Project>
