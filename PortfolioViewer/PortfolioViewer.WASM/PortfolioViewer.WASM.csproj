<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

	<PropertyGroup>
		<TargetFramework>net10.0</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<RuntimeIdentifier>browser-wasm</RuntimeIdentifier>
		<WasmBuildNative>true</WasmBuildNative>
		<ServiceWorkerAssetsManifest>service-worker-assets.js</ServiceWorkerAssetsManifest>
		<AssemblyName>GhostfolioSidekick.$(MSBuildProjectName)</AssemblyName>
		<RootNamespace>GhostfolioSidekick.$(MSBuildProjectName.Replace(" ", "_"))</RootNamespace>
		<UserSecretsId>0c5d0c9e-4b64-41be-8ab5-1d3d767e3f29</UserSecretsId>
		<WasmFingerprintAssets>false</WasmFingerprintAssets>
		<PublishTrimmed>false</PublishTrimmed>
	</PropertyGroup>

	<ItemGroup>
		<SonarQubeSetting Include="sonar.exclusions">
			<Value>**/*.js</Value>
		</SonarQubeSetting>
		<SonarQubeSetting Include="sonar.coverage.exclusions">
			<Value>**</Value>
		</SonarQubeSetting>
	</ItemGroup>

	<PropertyGroup>
		<NoWarn>1701;1702;SKEXP0110;SKEXP0001;CS8602</NoWarn>
	</PropertyGroup>

	<ItemGroup>
		<Content Remove="wwwroot\js\site.ts" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Bit.Besql" Version="10.4.2" />
		<PackageReference Include="Markdig" Version="0.45.0" />
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="10.0.3" />
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="10.0.3" PrivateAssets="all" />
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.Authentication" Version="10.0.3" />
		<PackageReference Include="Microsoft.Extensions.ServiceDiscovery" Version="10.3.0" />
		<PackageReference Include="Microsoft.TypeScript.MSBuild" Version="5.9.3">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
		<PackageReference Include="Plotly.Blazor" Version="7.0.0" />
		<PackageReference Include="Grpc.Net.Client.Web" Version="2.76.0" />
		<PackageReference Include="Grpc.Net.Client" Version="2.76.0" />
		<PackageReference Include="Google.Protobuf" Version="3.33.5" />
		<PackageReference Include="Grpc.Tools" Version="2.78.0" PrivateAssets="All" />
		<PackageReference Include="Microsoft.NET.Sdk.WebAssembly.Pack" Version="10.0.3" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\AI\AI.Agents\AI.Agents.csproj" />
		<ProjectReference Include="..\..\Database\Database.csproj" />
		<ProjectReference Include="..\..\Model\Model.csproj" />
		<ProjectReference Include="..\PortfolioViewer.Common\PortfolioViewer.Common.csproj" />
		<ProjectReference Include="..\PortfolioViewer.WASM.AI\PortfolioViewer.WASM.AI.csproj" />
		<ProjectReference Include="..\PortfolioViewer.WASM.Data\PortfolioViewer.WASM.Data.csproj" />
	</ItemGroup>

	<ItemGroup>
		<ServiceWorker Include="wwwroot\service-worker.js" PublishedContent="wwwroot\service-worker.published.js" />
	</ItemGroup>

	<ItemGroup>
        <Content Update="wwwroot\index.html">
          <CopyToPublishDirectory>Always</CopyToPublishDirectory>
        </Content>
		<Content Update="wwwroot\js\dist\webllm.interop.js">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
		<Content Update="wwwroot\js\dist\webllm.types.js">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
	</ItemGroup>

	<ItemGroup>
		<TypeScriptCompile Update="wwwroot\js\dist\webllm.interop.ts">
			<ExcludeFromSingleFile>true</ExcludeFromSingleFile>
			<CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
		</TypeScriptCompile>
		<TypeScriptCompile Update="wwwroot\js\dist\webllm.types.ts">
			<ExcludeFromSingleFile>true</ExcludeFromSingleFile>
			<CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
		</TypeScriptCompile>
	</ItemGroup>

	<ItemGroup>
		<Protobuf Include="..\PortfolioViewer.ApiService\Protos\sync.proto" GrpcServices="Client" />
	</ItemGroup>

	<ItemGroup>
		<TrimmerRootDescriptor Include="linker.xml" />
	</ItemGroup>

	<Target Name="AllowUsingAspNetCoreInBlazorWasm" AfterTargets="ProcessFrameworkReferences">
		<ItemGroup>
			<UnavailableRuntimePack Remove="Microsoft.AspNetCore.App" />
		</ItemGroup>
	</Target>

</Project>
