{
    "compilerOptions": {
        "typeRoots": [ "./types", "node_modules/@types" ],
        "target": "ES2015",
        "module": "ESNext",
        "lib": [ "DOM", "ES2018" ],
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "skipLibCheck": true
    }
}
