<Project Sdk="Microsoft.NET.Sdk.Razor">

	<PropertyGroup>
		<TargetFramework>net9.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<AssemblyName>GhostfolioSidekick.$(MSBuildProjectName)</AssemblyName>
		<RootNamespace>GhostfolioSidekick.$(MSBuildProjectName.Replace(" ", "_"))</RootNamespace>
		<AddRazorSupportForMvc>true</AddRazorSupportForMvc>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="9.0.4" />
		<PackageReference Include="Microsoft.Extensions.AI.Abstractions" Version="9.4.0-preview.1.25207.5" />
		<PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="9.0.4" />
	</ItemGroup>

	<ItemGroup>
	  <Content Update="wwwroot\js\dist\webllm-interop.js">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </Content>
	  <Content Update="wwwroot\js\dist\webllm.types.js">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </Content>
	</ItemGroup>

	<Import Project="$(MSBuildExtensionsPath)\Microsoft\TypeScript\Microsoft.TypeScript.targets" Condition="Exists('$(MSBuildExtensionsPath)\Microsoft\TypeScript\Microsoft.TypeScript.targets')" />

	<PropertyGroup>
		<TypeScriptCompileBlocked>false</TypeScriptCompileBlocked>
		<TypeScriptToolsVersion>5.0</TypeScriptToolsVersion>
		<TypeScriptOutDir>wwwroot/js/dist</TypeScriptOutDir>
		<TypeScriptSourceMap>true</TypeScriptSourceMap>
		<TypeScriptNoEmitOnError>true</TypeScriptNoEmitOnError>
	</PropertyGroup>

	<Target Name="CompileTypeScript" BeforeTargets="Build">
		<Exec Command="tsc -p $(ProjectDir)tsconfig.json" ContinueOnError="false" />
	</Target>
	
</Project>
