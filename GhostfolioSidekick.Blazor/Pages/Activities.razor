@page "/activities"

@using GhostfolioSidekick.Blazor.Models
@using GhostfolioSidekick.Blazor.Services
@inject DatabaseService DatabaseService

<PageTitle>Activities</PageTitle>

<h3>Activities</h3>

@if (activities == null)
{
    <p><em>Loading...</em></p>
}
else if (!activities.Any())
{
    <p>No activities available.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Type</th>
                <th>Account</th>
                <th>Symbol</th>
                <th>Quantity</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var activity in activities)
            {
                <tr>
                    <td>@activity.Date</td>
                    <td>@activity.Type</td>
                    <td>@activity.Account.Name</td>
                    <td>@activity.Symbol</td>
                    <td>@activity.Quantity</td>
                    <td>@activity.Price</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Activity> activities;

    protected override async Task OnInitializedAsync()
    {
        activities = await DatabaseService.GetActivitiesAsync();
    }
}
